<s:Window xmlns:fx="http://ns.adobe.com/mxml/2009"
  xmlns:s="library://ns.adobe.com/flex/spark"
  xmlns:mx="library://ns.adobe.com/flex/mx"
  width="550" height="450" creationComplete="init();">
  <s:layout>
    <s:VerticalLayout/>
  </s:layout>

  <fx:Script>
    <![CDATA[
    private function init () :void {
      const screenBounds :Rectangle = Screen.mainScreen.bounds;
      nativeWindow.x = screenBounds.width - width;
      nativeWindow.y = 0;
      _exporter = new Exporter(this);
    }

    protected var _exporter :Exporter;
    ]]>
  </fx:Script>
  <s:List id="libraries">
    <mx:ArrayCollection/>
  </s:List>
  <s:HGroup>
    <s:Label>Import</s:Label>
    <mx:FileSystemComboBox id="importRoot"/>
    <s:Button id="browseImport" label="..."/>
  </s:HGroup>
  <s:HGroup>
    <s:Label>Export</s:Label>
    <mx:FileSystemComboBox id="exportRoot"/>
    <s:Button id="browseExport" label="..."/>
  </s:HGroup>
  <s:Button id="export" enabled="false" label="Export"/>
</s:Window>
